{% extends 'base.html.twig' %}

{% block body %}
<div class="card mb-3" style="max-width: 600px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{vich_uploader_asset(peinture, 'imageFile')|imagine_filter('miniature')}}" alt="..." style="width:200px; height:100%;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{peinture.nom}}</h5>
        <p class="card-text">{{peinture.description}}</p>
        <p class="card-text"><small class="text-muted">Réalisé le: {{peinture.dateRealisation|date('d-m-Y')}}</small></p>
        <p class="card-text"><small class="text-muted"> Largeur: {{peinture.largeur}} cm</small></p>
        <p class="card-text"><small class="text-muted"> Hauteur: {{peinture.hauteur}} cm</small></p>
        {% if peinture.enVente %}
            <p class="card-text"><small class="text-muted"> Disponible à la vente: {{peinture.prix}}€</small></p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% include "commentaires/form.html.twig" %}
{% include "commentaires/commentaires.html.twig" %}
{% endblock %}
